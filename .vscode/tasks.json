{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "wails-build-debug",
            "type": "shell",
            // Используем go build напрямую для корректной работы отладчика dlv
            "command": "go build -gcflags \"all=-N -l\" -tags dev -o ${workspaceFolder}/build/bin/zync.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": [
                "build-frontend"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build-frontend",
            "type": "shell",
            // Собираем фронтенд, чтобы ассеты были актуальны
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        }
    ]
}